{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "preserve",

        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,

        "baseUrl": "./src/js",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ],

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/js/**/*.ts",
        "src/js/**/*.tsx",
        "src/js/**/*.vue",
    ],
    "files": [
        "src/js/shims-vue.d.ts"
    ],
    "exclude": [
        "node_modules",
        "node_modules/**"
    ]
}
